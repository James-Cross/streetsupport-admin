---
title: Contact Volunteer - Street Support Admin
description: Street Support - Making it easier to help homeless people in Manchester
layout: default.hbs
permalink: false
jsBundle: contactVolunteer
page: contactVolunteer
nosubnav: true
---

<div class="block block--highlight admin-header">
  <div class="container block__inner">
    <header data-bind="with: volunteer">
      <h1>Contact Volunteer</h1>
      <a href="/volunteers/" class="btn btn--info">
        <span class="btn__text">Back to Volunteers</a>
      </a>
    </header>
  </div>
</div>
<div class="block">
  <div class="container block__inner">
    <div class="block__content split" data-bind="with: volunteer">
        <h1 class="h2">Volunteer Details</h1>
      <section class="split__element">
        <h2 class="h3">Name</h2>
        <p>
          <span data-bind="text: person.firstName"></span>
          <span data-bind="text: person.lastName"></span>
        </p>
        <!-- ko if: person.telephone -->
        <h2 class="h3">Telephone</h2>
        <p data-bind="text: person.telephone"></p>
        <!-- /ko -->
        <h2 class="h3">Skills</h2>
        <h3 class="h4">Categories</h3>
        <p data-bind="text: skillsAndExperience.categories"></p>
        <h3 class="h4">Description</h3>
        <p data-bind="text: skillsAndExperience.description"></p>
      </section>
      <section class="split__element">
        <h2 class="h3">Availability</h2>
        <p data-bind="text: availability.description"></p>
        <h2 class="h3">Resources</h2>
        <p data-bind="text: resources.description"></p>
      </section>
    </div>
    <div class="block__content">
      <!-- ko if: isFormSubmitSuccessful -->
      <!-- ko template: { name: 'form-submit-success-template' } -->
      <!-- /ko -->
      <!-- /ko -->
      <!-- ko if: isFormSubmitFailure -->
      <!-- ko template: { name: 'form-submit-failure-template' } -->
      <!-- /ko -->
      <!-- /ko -->
      <!-- ko ifnot: isFormSubmitSuccessful -->
      <form class="form" data-bind="submit: submit">
        <fieldset class="form__fieldset" data-bind="with: formModel">
          <legend class="h2 form__fieldset-title">Contact Volunteer</legend>
          <ul class="form__field-list">
            <li class="form__field-item form__field-item--full">
              <label class="form__label" for="message">Message/Notes</label>
              <textarea class="form__input form__input--textarea" id="message" data-bind="value: message" placeholder="required"></textarea>
            </li>
            <li class="form__field-item form__field-item--full">
              <label class="form__label--checkbox" for="isNotAnEmail">If you have contacted the volunteer in some other
                way and don't want to send this message as an email, please tick the checkbox and we will save the
                message in the contact log. <input id="isNotAnEmail" name="isNotAnEmail" type="checkbox" data-bind="checked: isNotAnEmail" /></label>
            </li>
          </ul>
        </fieldset>
        <button type="submit" class="btn btn--primary form__submit" data-bind="click: submit"><span class="btn__text">Submit</span></button>
      </form>
      <!-- /ko -->
    </div>
  </div>
</div>

{{> loading-spinner}}
<script type="text/html" id="contact-form">
</script>

<script type="text/html" id="form-submit-success-template">
  <h2>Your message has been sent</h2>
</script>

<script type="text/html" id="form-submit-failure-template">
  <h2>There was a problem with your submission:</h2>
  <ul data-bind="foreach: errors">
    <li data-bind="text: $data"></li>
  </ul>
</script>
