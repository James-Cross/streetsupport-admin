---
title: Users - Street Support Admin
description: Street Support - Making it easier to help homeless people in Manchester
layout: default.hbs
permalink: false
jsBundle: users
page: users
nosubnav: true
---

<div class="block block--highlight">
  <div class="container block__inner">
    <header>
      <h1>Users</h1>
      <a href="create-super-admin" class="btn btn--warning" data-claims="superadmin">
        <span class="btn__text">Create Super Admin</span>
      </a>
      <a href="create-city-admin" class="btn btn--info" data-claims="superadmin">
        <span class="btn__text">Create Location Hub Admin</span>
      </a>
      <a href="create-charter-admin" class="btn btn--info" data-claims="superadmin">
        <span class="btn__text">Create Charter Admin</span>
      </a>
      <a href="create-accom-review-admin" class="btn btn--info" data-claims="superadmin">
        <span class="btn__text">Create Accom Review Admin</span>
      </a>
    </header>
    <!-- ko if: shouldShowLocationFilter -->
    <form class="form" data-bind="submit: submitSearch" data-claims="superadmin,cityadmin">
      <fieldset class="form__fieldset">
        <legend class="form__legend">Filter results</legend>
        <ul class="form__field-list">
          <li class="form__field-item form__field-item--full-width" data-claims="superadmin">
            <label for="filterOnRole" class="form__label">Role:</label>
            <select class="form__input form__input--medium" name="filterOnRole" data-bind="options: roles,
                              value: filterOnRole,
                              optionsText: 'id',
                              optionsValue: 'id',
                              optionsCaption: 'Any'"></select>
          </li>
          <li class="form__field-item form__field-item--full-width" data-claims="superadmin,cityadmin">
            <label for="filterOnLocation" class="form__label">Location:</label>
            <select class="form__input form__input--medium" name="filterOnLocation" data-bind="options: availableLocations,
                              value: locationToFilterOn,
                              optionsText: 'name',
                              optionsValue: 'id',
                              optionsCaption: 'All'"></select>
          </li>
        </ul>
      </fieldset>
      <button type="submit" class="btn btn--info">
        <span class="btn__text">Search</span>
      </button>
    </form>
    <!-- /ko -->
  </div>
</div>

{{> item-listing }}

<script type="text/html" id="item-template">
  <article>
    <p><span data-bind="text: email"></span>
    <span data-bind="text: associatedAreaId"></span></p>
    <p data-bind="html: claims"></p>
    <div data-claims="superadmin, cityadmin">
      <button class="btn btn--warning" data-bind="click: removeAccess">
        <span class="btn__text">Remove Access</span>
      </button>
    </div>
  </article>
</script>
